@model SistemaCadeteriaMVC.ViewModels.ClienteViewModel

<section class="flex w-full justify-center py-10 items-center bg-white">
  <form class="bg-white w-1/3" asp-controller="Cliente" asp-action="EditarCliente" method="POST">
    <h1 class="text-gray-800 font-bold text-2xl mb-7">Editar Cliente</h1>
    <div class="flex items-center border-2 py-2 px-3 rounded-2xl mb-4">
      <input
        class="pl-2 outline-none border-none w-full"
        type="text"
        name="nombre"
        id="nombre"
        placeholder="@Html.DisplayNameFor(Model => Model.Nombre)"
        value="@Model.Nombre"
      />
    </div>
    <div class="flex items-center border-2 py-2 px-3 rounded-2xl mb-4">
      <input
        class="pl-2 outline-none border-none w-full"
        type="text"
        name="direccion"
        id="direccion"
        placeholder="@Html.DisplayNameFor(Model => Model.Direccion)"
        value="@Model.Direccion"
      />
    </div>
    <div class="flex items-center border-2 py-2 px-3 rounded-2xl">
      <input
        class="pl-2 outline-none border-none w-full"
        type="tel"
        name="telefono"
        id="telefono"
        placeholder="@Html.DisplayNameFor(Model => Model.Telefono)"
        value="@Model.Telefono"
      />
    </div>
    <div class="flex items-center border-2 py-2 px-3 rounded-2xl">
      <input
        class="pl-2 outline-none border-none w-full"
        type="text"
        name="referencia"
        id="referencia"
        placeholder="@Html.DisplayNameFor(Model => Model.Referencia)"
        value="@Model.Referencia"
      />
    </div>
    <button
      type="submit"
      class="block w-full bg-indigo-600 mt-4 py-2 rounded-2xl text-white font-semibold mb-2"
    >
      Editar Cliente
    </button>
  </form>
</section>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}