@model SistemaCadeteriaMVC.ViewModels.CadeteViewModel

<section>
  <h1 class="text-center">Editar cadete</h1>
  <form asp-controller="Cadete" asp-action="EditarCadete" method="POST" >
    <label asp-for="@Model.Nombre"> @Html.DisplayNameFor(Model => Model.Nombre) 
      <input name="nombre" type="text" value="@Model.Nombre">
    </label>
    <span class="form-control" asp-validation-for="@Model.Nombre"></span>

    <label asp-for="@Model.Direccion"> @Html.DisplayNameFor(Model => Model.Direccion) 
      <input name="direccion" type="text" value="@Model.Direccion">
    </label>
    <span class="form-control" asp-validation-for="@Model.Direccion"></span>

    <label asp-for="@Model.Telefono"> @Html.DisplayNameFor(Model => Model.Telefono)
      <input name="telefono" type="text" value="@Model.Telefono">
    </label>
    <span class="form-control" asp-validation-for="@Model.Telefono"></span>

    <input type="submit" value="Guardar cambios">
  </form>
</section>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}