@model SistemaCadeteriaMVC.ViewModels.UsuarioViewModel

<section class="flex w-full justify-center py-10 items-center bg-white">
  <form class="bg-white" asp-controller="Login" asp-action="IniciarSesion" method="POST">
    <h1 class="text-gray-800 font-bold text-2xl mb-7">Iniciar Sesión</h1>
    <div class="flex items-center border-2 py-2 px-3 rounded-2xl mb-4">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 text-gray-400"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
          clip-rule="evenodd"
        />
      </svg>
      <input
        class="pl-2 outline-none border-none"
        type="text"
        name="username"
        id="username"
        placeholder="@Html.DisplayNameFor(Model => Model.Username)"
        value="@Model.Username"
      />
    </div>
    <div class="flex items-center border-2 py-2 px-3 rounded-2xl">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 text-gray-400"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
          clip-rule="evenodd"
        />
      </svg>
      <input
        class="pl-2 outline-none border-none"
        type="password"
        name="password"
        id="password"
        placeholder="@Html.DisplayNameFor(Model => Model.Password)"
        value="@Model.Password"
      />
    </div>
    <button
      type="submit"
      class="block w-full bg-indigo-600 mt-4 py-2 rounded-2xl text-white font-semibold mb-2"
    >
      Inicar Sesión
    </button>
  </form>
</section>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}